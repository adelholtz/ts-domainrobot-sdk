{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "strict": true,
        "removeComments": true,
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "allowJs": true,
        "resolveJsonModule": true,
        "paths": {
            "*": [
                "node_modules/*"
            ]
        }
    },
    "include": [
        "./src", "index.ts"
    ],
    "exclude": [
        "./node_modules",
        "./vendor",
        "./tests",
        "./tests_js"
    ]
}